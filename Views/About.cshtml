@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var page = new AboutPage(Model.Content);
}
@section headerScripts{

}
@section mainContent{
    
    
<div class="masthead__container">
    @Html.Partial("_MastHeadLarge", page.HeroImage)


    <div class="page__header vertical-center text-center">
      <div class="">  
      
          <h1 class="page__header__title">@page.Heading</h1>
          <div class="masthead__tagline pg-title">
              @page.Intro
          </div>
      
      </div>
    </div>

</div>

<div class="container-fluid">
    
        <div class="row page__section-img inverted text" style="">
            <div class="pull-right row hidden-xs col-sm-6 col-md-6 col-lg-6">
                <img src="@page.OverviewImage" alt="" class="img-responsive" />
            </div>                        
            <div class="page__header vertical-center text-center col-xs-0 col-sm-6 col-md-6 col-lg-6" style="margin-left:0\9;margin-right:0\9;">
                <div class="col-lg-8 col-lg-push-2">
                    <h1 class="page__header__title">@page.OverviewHeading</h1>
                    @Html.Raw(page.OverviewCopy)
                    <nav class="page__header__nav">
                        <a href="@page.OverviewUrl" class="btn btn-default">@page.OverviewReadMoreButtonText</a>
                    </nav>
                </div>    
            </div>
            
        </div>    
   

@*     
        <div class="row page__section-img">
            <img src="@page.HistoryBackgroundImage" alt="" class="cover" />

            <div class="page__header text-left">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-pull-1 col-sm-pull-1 col-md-pull-1 col-lg-pull-1 pull-right">
                    <h1 class="page__header__title">@page.HistoryHeading</h1>
                    @Html.Raw(page.HistoryCopy)
                    <nav class="page__header__nav">
                        <a href="#contact1" class="btn btn-default">@page.HistoryReadMoreButtonText</a>
                    </nav>
                </div>
            </div>
        </div>
 *@    

        <div class="row page__section-img text" style="background-color:#4f5261;color:#ffffff;">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-md-push-2 col-lg-push-2">
                <div class="container-fluid" style="background:none;">
                
                    <div class="page__header vertical-center text-center">
                        <h1 class="page__header__title">@page.ServicesHeading</h1>
                        @Html.Raw(page.ServicesCopy)
                        <br />
                        <nav class="page__header__nav">
                            <ul class="list-inline text-uppercase">
                                @foreach (var service in page.Services)
                                {
                                    <li><a href="@service.Url">@service.Name</a></li>
                                }
                            </ul>
                        </nav>
                    </div>    
                </div>
            </div>    
        </div>
    
        <div class="row page__section-img">
            <div class="container-fluid"> 
                <img src="@page.PressBackgroundImage" alt="" class="cover" style="width: 100%;" />

                
                    <div class="page__header vertical-center text-left">
                        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4 col-xs-pull-0 col-sm-pull-0 col-md-pull-1 col-lg-pull-1 pull-right">
                            <h1 class="page__header__title">@page.PressHeading</h1>
                            @Html.Raw(page.PressCopy)
                            <nav class="page__header__nav" style="margin-left:-15px;">
                                <ul class="list-inline">
                                    <li><a href="/about/press/media-kit/" class="btn btn-default">Media Kit</a></li>
                                    <li><a href="/about/press/" class="btn btn-default">Press Release</a></li>
                                </ul>
                            </nav>
                        </div>    
                    </div>
                
            </div>    
        </div>
    
        <div class="row page__section-img">
            <div class="container-fluid"> 
                <img src="@page.PeopleBackgroundImage" alt="" class="cover" style="width: 100%;" />
                
                <div class="page__header vertical-center text-center">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-push-3 col-lg-push-3">
                        <h1 class="page__header__title">@page.PeopleHeading</h1>
                        @Html.Raw(page.PeopleCopy)
                        <nav class="page__header__nav">
                            <a href="@page.PeopleUrl" class="btn btn-default">@page.PeopleReadMoreButtonText</a>
                        </nav>
                    </div>
                </div>    
            </div>    
        </div>
    </div>

</div>

<div class="main container-fluid bg-image">

</div>


}
@section footerScripts{

}