@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var page = new LocationsPage(Model.Content);
}
@section headerScripts{

}
@section mainContent{
    <div class="masthead__container masthead__subpage">
        @Html.Partial("_MastHead", page.HeroImage)
        @Html.Partial("_BreadCrumb")

    </div>

<div class="main container-fluid">
    <div class="">
        <div class="section">
            <div class="row">
               <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3" style="overflow: hidden;">
                   @Html.Partial("_SideBarNav", page.ParentPage)
                </div> <!-- end sidebar container -->

                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 about__overview--container">

                    <h2 class="pull-left"><img src="@page.Logo" alt="LAN"></h2>

                    <div class="pull-left lan__location--header">
                        @Html.Raw(page.Copy)
                    </div>

                    <div class="">
                        @foreach (var location in page.Locations)
                        {
                            <div class="col-xs-12 col-sm-6 col-md-4 lan__location">
                                <h3>@location.Name</h3>
                                <p class="lan__location--address">
                                    @location.Address1 
                                </p>
                                 @if (!string.IsNullOrEmpty(location.Address2))
                                    {
                                        <p class="lan__location--address2">@location.Address2</p>
                                    }

                                <p class="lan__location--state">@location.City, @location.State @location.Zip</p>
                                <a class="lan__location--phone" href="tel:@location.Phone.Replace(".", "").Replace("-", "").Replace(" ", "")">
                                    P @location.Phone
                                </a>
                                <br>
                                @if (!string.IsNullOrEmpty(location.Fax))
                                {
                                    <p>
                                        F @location.Fax
                                    </p>
                                }

                            </div>
                        }
   
                    </div>

                </div> <!-- end overview container -->

                  

            </div> <!-- end row -->


        </div> <!-- end section -->
    </div>
</div>
}
@section footerScripts{

}

