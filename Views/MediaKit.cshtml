@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var page = new MediaKit(Model.Content);
}
@section headerScripts{

}
@section mainContent{


    @Html.Partial("_MastHeadSub", page)

    <div class="main container-fluid" style="background:#e7e6e1;">
        <div class="">
            <div class="section">
                <div class="row">

                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <div class="aside__navigation">
                           @Html.Partial("_SideBarNav", page.ParentPage)
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">

                        <article>
                            <h1>@Html.Raw(page.Heading)</h1>
                            <h2>@page.Heading2</h2>
                            @Html.Raw(page.Copy)
                        </article>

                        <hr />
                        <h2>@page.RecognitionHeading</h2>
                        <div class="row">
                            <div class="col-xs-6">@Html.Raw(page.RecognitionColumn1)</div>
                            <div class="col-xs-6">@Html.Raw(page.RecognitionColumn2)</div>
                        </div>
                        <hr />

                        <div class="media-kit-downloads">
                            <h2 class="pg-title">Downloads</h2>
                            <p>@page.DownloadInstructions</p>
                            @Downloads(page.DownloadsForColumn1)
                            @Downloads(page.DownloadsForColumn2)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section footerScripts{

}

@helper Downloads(IEnumerable<PublishedMedia> media)
{
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <ul class="list-unstyled list-group list-columns">
            @foreach (var download in media)
            {
                <li class="list-group-item"><a href="@download.Url">@download.Title</a></li>
            }
        </ul>
    </div>
}