@model PageItem
<div class="masthead__container masthead__subpage">
    <div id="masthead" class="masthead">

        <!-- <img src="images/locations.jpg" alt="" /> -->

        <div style="background-image: url(@Model.MastHeadImage);background-repeat: no-repeat; background-position: 50% 50%; background-size: cover; width: 100%; height: 100%;"></div>

    </div>


    <div class="container-fluid">
        <div class="vertical-center page__header">
            <div class="section">
                <div class="row">
                    <div class="col-sm-9 col-md-9 col-lg-9 col-sm-push-3 col-md-push-3 col-lg-push-3">
                        <h1 class="page__header__title">@Model.MastHeadTitle</h1>
                        <nav class="page__breadcrumb__nav small">
                            @foreach (var crumb in Model.Breadcrumb)
                            {
                                if (crumb.IsCurrentPage)
                                {
                                    <span>@crumb.NavigationTitle</span>
                                }
                                else
                                {
                                    <a href="@crumb.Url">@crumb.NavigationTitle</a>
                                }

                                if (!Equals(crumb, Model.Breadcrumb.Last()))
                                {
                                    <text>/</text>
                                }
                            }

                        </nav>
                    </div>    
                </div>
            </div>        
        </div>
    </div>
</div><!-- //.masthead -->
