@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div class="section row project__description">
	<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-push-1 col-sm-push-1 col-md-push-1 col-lg-push-1">
		<h2 class="section__title text-center text-uppercase">@Html.Raw(CurrentPage.GetPropertyValue("successTitle"))</h2>
		<p>@Html.Raw(CurrentPage.GetPropertyValue("successText"))</p>
		<div class="project__awards_gallery row">
			@if (CurrentPage.HasValue("awards"))
			{
				string[] awardsCollection = CurrentPage.GetPropertyValue("awards").ToString().Split(',');
				foreach (string a in awardsCollection)
				{
					dynamic award = Umbraco.Media(Int32.Parse(a));
					<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3"><p class="text-center"><img src="@award.umbracoFile" alt='@award.title' style="width:100px;height:100px;background:#666;" /><br />@award.title</p></div>
				}
			}
		</div>
	</div>
</div>	